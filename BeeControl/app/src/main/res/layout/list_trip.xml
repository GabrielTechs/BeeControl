<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:elevation="4dp" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edittextstyle">

        <TextView
            android:id="@+id/txtTripTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de carga"
            android:textSize="18sp"
            android:textColor="#CC000000"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTripId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="000000"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTripDriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTripTitle"
            android:gravity="start"
            android:text="Empleado"
            android:textSize="18sp"
            android:textColor="#B3000000"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTripPartingHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txtTripId"
            android:text="@string/formato_hora"
            android:textSize="18sp"
            android:textColor="#CC000000"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTripArriveHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txtTripPartingHour"
            android:text="@string/formato_hora"
            android:textSize="18sp"
            android:textColor="#CC000000"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTripDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTripDriverName"
            android:text="@string/formato_fecha"
            android:textSize="15sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTripSettedHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTripDate"
            android:text="@string/formato_hora"
            android:textSize="15dp"
            android:typeface="serif" />

    </RelativeLayout>

</android.support.v7.widget.CardView>