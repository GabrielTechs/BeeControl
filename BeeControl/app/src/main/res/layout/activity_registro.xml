<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="#FDFDFE" tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/logoblanco"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="cursive"
        android:text="Crea tu cuenta "
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="cursive"
        android:text="BeeControl"
        android:textColor="#45C2EF"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/edittextstyle"
        android:gravity="left"
        android:hint="Nombre"
        android:textColorHint="#fff"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/edittextstyle"
        android:gravity="left"
        android:hint="Apellido"
        android:textColorHint="#fff"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Correo Electronico"
        android:textColor="#fff"
        android:textStyle="italic"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="247dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="Confirmar"
        android:inputType="textPassword"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="italic"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="323dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#fff"
        android:textStyle="italic"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="323dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="TextView"
        android:textColor="#17202a"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="395dp"
        tools:text="Use 8 o mas caracteres con una mezcla de letras,
            numeros y caracteres especiales" />

    <Button
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonsstylesnormalregistro"
        android:text="Siguiente"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="441dp" />

</android.support.constraint.ConstraintLayout>