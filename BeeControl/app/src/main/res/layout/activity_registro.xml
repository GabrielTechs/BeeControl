<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="#FDFDFE" tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="950dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFDFDFE"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="60dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/logoblanco"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="0dp" />



        <EditText
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="@drawable/edittextstyleregistro"
            android:gravity="left"
            android:hint="Nombre"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/txtapellido"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextstyleregistro"
            android:gravity="left"
            android:hint="Apellido"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Coreo Electronico"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextstyleregistro"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txtcontra"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:background="@drawable/edittextstyleregistro"
            android:layout_marginBottom="10dp"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txtcontraconfir"
            android:layout_width="match_parent"
            android:background="@drawable/edittextstyleregistro"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="4dp"
            android:inputType="textPassword"
            android:hint="Contraseña"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Use 8 o más caracteres con una mezcla de letras, números y símbolos"/>

        <Button
            android:id="@+id/txtbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonsstylesnormalregistro"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignBottom="@+id/linearLayout"
            android:text="Siguiente"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" android:gravity="center">
    </LinearLayout>


</RelativeLayout>