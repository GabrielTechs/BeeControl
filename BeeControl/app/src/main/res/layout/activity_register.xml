<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE1E9">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btnback"
            style="@android:style/TextAppearance.Large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow_back_mainblue_24dp"
            android:onClick="back"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/sinfondob"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="0dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:indeterminateDrawable="@drawable/cpb1"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextstyle"
            android:elevation="4dp"
            android:hint="Nombre"
            android:singleLine="true"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:elevation="4dp"
            android:hint="Apellido"
            android:singleLine="true"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:typeface="serif" />


        <EditText
            android:id="@+id/txtPassword"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:singleLine="true"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtConfPasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Confirmar"
            android:inputType="textPassword"
            android:singleLine="true"
            android:typeface="serif" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Use 8 o más caracteres con una mezcla de letras, números y símbolos"
            app:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/buttonsstylesnormal"
            android:text="Siguiente"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>