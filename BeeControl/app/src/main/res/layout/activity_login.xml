<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#000" tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="950dp"
        android:background="#FDFDFE"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="60dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/d" />

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:paddingBottom="15dp"
            android:text="La mejor app para el control de las asistencias"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:fontFamily="serif" />-->

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/edittextstyle"
            android:gravity="left"
            android:hint="Usuario"
            android:textColorHint="#000"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            />


        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/edittextstyle"
            android:gravity="left"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColorHint="#000"
            android:drawableLeft="@drawable/ic_lock_black_24dp"/>



        <TextView
            android:id="@+id/txtForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Olvidaste tu contraseña?"
            android:textColor="#000"
            android:textSize="18sp"
            app:fontFamily="sans-serif-smallcaps" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/buttonsstylesnormal"
            android:fontFamily="sans-serif"
            android:onClick="login"
            android:text="Accede"
            android:textColor="#fff"/>
        <!--android:drawableLeft="@drawable/ic_send_black_24dp"-->


        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="register"
            android:text="No tienes una cuenta? Registrate"
            android:textColor="#000"
            android:textSize="18sp"
            app:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>


</RelativeLayout>