<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFE"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#3498db"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/button"
            style="@android:style/TextAppearance.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:fontFamily="sans-serif"
            android:onClick="back"
            android:textColor="#fff" />
        <!--android:drawableLeft="@drawable/ic_send_black_24dp"-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Asistencia"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:background="#FFFDFDFE"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextstyle" />

        <Button
            android:id="@+id/buttondate"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:drawableRight="@drawable/ic_insert_invitation_black_24dp"
            android:gravity="start"
            android:onClick="clickDataPicker"
            android:text="Fecha"
            android:textColorHint="#fff"
            android:typeface="serif" />

        <AutoCompleteTextView
            android:id="@+id/Condition"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_below="@id/user"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextstyle"
            android:gravity="start"
            android:hint="Condicion"
            android:textColorHint="#000000"
            android:typeface="serif" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Condition"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@drawable/edittextstyle"
                android:gravity="center"
                android:text="Empleado"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/condicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@drawable/edittextstyle"
                android:gravity="center"
                android:text="Condicion"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@drawable/edittextstyle"
                android:gravity="center"
                android:text="Fecha"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/listheader">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>