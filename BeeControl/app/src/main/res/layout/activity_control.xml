<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="#3498db"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:onClick="back"
            style="@android:style/TextAppearance.Large"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            tools:ignore="OnClick" />
        <!--android:drawableLeft="@drawable/ic_send_black_24dp"-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Registro de viajes"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:text="Nombre del camionero"
            android:textSize="18sp"
            app:fontFamily="sans-serif-black" />


        <EditText
            android:id="@+id/txtNombreC"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittextstyle"
            android:singleLine="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nombre de la carga"
            android:textSize="18sp"
            app:fontFamily="sans-serif-black" />

        <EditText
            android:id="@+id/txtNombreCarga"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittextstyle"
            android:singleLine="true" />

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Asunto"
            android:textSize="18sp"
            app:fontFamily="sans-serif-black" />

        <EditText
            android:id="@+id/txtNombreAsunto"
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:inputType="textMultiLine" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:text="Fecha"
                android:textSize="18sp"
                app:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:gravity="right"
                android:text="Hora"
                android:textSize="18sp"
                app:fontFamily="sans-serif-black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttondate"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/ic_insert_invitation_black_24dp"
                android:gravity="start"
                android:onClick="clickDataPicker"
                android:text="Fecha"
                android:textColorHint="#fff"
                android:typeface="serif" />

            <EditText
                android:id="@+id/et_mostrar_hora_picker"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/ic_access_time_black_24dp"
                android:ems="10"
                android:hint="@string/formato_hora"
                android:inputType="time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttondate" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/txtSiguienteR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonsstylesnormal"
                android:text="Siguiente"
                android:textColor="#fff" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>